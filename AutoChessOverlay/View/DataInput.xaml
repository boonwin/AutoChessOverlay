<Window x:Name="DataInputWindow" x:Class="AutoChessOverlay.View.DataInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoChessOverlay.View"
        xmlns:model="clr-namespace:AutoChessOverlay.Model"
        mc:Ignorable="d"
        Title="DataInput" Height="450" Width="299.602">
    <Window.Resources>
        <model:Games x:Key="Games"/>
        <model:HsBattlegroundsHeroes x:Key="HsBattlegroundsHeroes"/>
    </Window.Resources>
    <Grid Margin="0,0,2,0">

        <ComboBox x:Name="cbGame" HorizontalAlignment="Left" Margin="18,10,0,0" VerticalAlignment="Top" Width="116" IsEditable="True"  IsReadOnly="True" Text="-- Select Game --" DataContext="{StaticResource Games}" ItemsSource="{Binding GameNames}" SelectionChanged="cbGame_SelectionChanged"  />
        <ComboBox x:Name="cbHero" HorizontalAlignment="Left" Margin="161,10,0,0" VerticalAlignment="Top" Width="116" IsEditable="True"  IsReadOnly="True" Text="-- Select Hero --" ItemsSource="{Binding Names}" />

        <Button x:Name="btnEnterData" Content="History" HorizontalAlignment="Left" Margin="88,363,0,0" VerticalAlignment="Top" Width="141" Height="28" Click="btnEnterData_Click"  />

        <TextBox x:Name="tbRank1Amount" HorizontalAlignment="Left" Height="32" Margin="88,42,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" TextAlignment="Left" Width="100" FontSize="16" Background="LightGray" Grid.ColumnSpan="2"/>
        <Button x:Name="btnr1plus1" Content="+1" HorizontalAlignment="Left" Margin="193,42,0,0" VerticalAlignment="Top" Width="36" Height="31" Click="btnr1plus1_Click" MouseRightButtonUp="btnr1plus1_MouseRightButtonUp"/>
        <Label Content="1st" HorizontalAlignment="Left" Margin="33,39,0,0" VerticalAlignment="Top" FontSize="18"/>

        <TextBox x:Name="tbRank2Amount" HorizontalAlignment="Left" Height="32" Margin="88,80,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" TextAlignment="Left" Width="100" FontSize="16" Background="LightGray" Grid.ColumnSpan="2"/>
        <Button x:Name="btnr2plus1" Content="+1" HorizontalAlignment="Left" Margin="193,81,0,0" VerticalAlignment="Top" Width="36" Height="31" MouseRightButtonUp="btnr2plus1_MouseRightButtonUp" Click="btnr2plus1_Click"/>
        <Label Content="2nd" HorizontalAlignment="Left" Margin="33,79,0,0" VerticalAlignment="Top" FontSize="18"/>

        <TextBox x:Name="tbRank3Amount" HorizontalAlignment="Left" Height="32" Margin="88,120,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" TextAlignment="Left" Width="100" FontSize="16" Background="LightGray" Grid.ColumnSpan="2"/>
        <Button x:Name="btnr3plus1" Content="+1" HorizontalAlignment="Left" Margin="193,121,0,0" VerticalAlignment="Top" Width="36" Height="31" Click="btnr3plus1_Click" MouseRightButtonUp="btnr3plus1_MouseRightButtonUp"/>
        <Label Content="3rd" HorizontalAlignment="Left" Margin="33,118,0,0" VerticalAlignment="Top" FontSize="18"/>

        <TextBox x:Name="tbRank4Amount" HorizontalAlignment="Left" Height="32" Margin="88,158,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" TextAlignment="Left" Width="100" FontSize="16" Background="LightGray" Grid.ColumnSpan="2"/>
        <Button x:Name="btnr4plus1" Content="+1" HorizontalAlignment="Left" Margin="193,160,0,0" VerticalAlignment="Top" Width="36" Height="31" Click="btnr4plus1_Click" MouseRightButtonUp="btnr4plus1_MouseRightButtonUp"/>
        <Label Content="4th" HorizontalAlignment="Left" Margin="33,157,0,0" VerticalAlignment="Top" FontSize="18"/>

        <TextBox x:Name="tbRank5Amount" HorizontalAlignment="Left" Height="32" Margin="88,197,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" TextAlignment="Left" Width="100" FontSize="16" Background="LightGray" Grid.ColumnSpan="2"/>
        <Button x:Name="btnr5plus1" Content="+1" HorizontalAlignment="Left" Margin="193,198,0,0" VerticalAlignment="Top" Width="36" Height="31" Click="btnr5plus1_Click" MouseRightButtonDown="btnr5plus1_MouseRightButtonUp"/>
        <Label Content="5th" HorizontalAlignment="Left" Margin="33,196,0,0" VerticalAlignment="Top" FontSize="18"/>

        <TextBox x:Name="tbRank6Amount" HorizontalAlignment="Left" Height="32" Margin="88,237,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" TextAlignment="Left" Width="100" FontSize="16" Background="LightGray" Grid.ColumnSpan="2"/>
