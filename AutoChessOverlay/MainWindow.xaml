        <Label x:Name="lbRank6" Content="0x" HorizontalAlignment="Left" Margin="136,219,0,0" VerticalAlignment="Top" Height="25" Width="59" HorizontalContentAlignment="Center" FontSize="14" FontFamily="Arial" FontStyle="Italic" FontWeight="Bold" BorderThickness="0"/>
