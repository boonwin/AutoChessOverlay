<Window x:Class="AutoChessOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoChessOverlay"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="300" ResizeMode="NoResize">
    <Grid Background="LightGray">
        <Border Margin="-1,-1,-1,0" BorderBrush="White" BorderThickness="1,1,1,1" Height="50" VerticalAlignment="Top" >
            <Border.Background>
                <LinearGradientBrush EndPoint="0.504,1.5" StartPoint="0.504,0.03">
                    <GradientStop Color="#002359" Offset="0"/>
                    <GradientStop Color="#005ebe" Offset="0.567"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Border Margin="-1,0,-1,-1" BorderBrush="White" BorderThickness="1,1,1,1" Height="30" VerticalAlignment="Bottom" >
            <Border.Background>
                <LinearGradientBrush EndPoint="0.504,1.5" StartPoint="0.504,0.03">
                    <GradientStop Color="#002359" Offset="0"/>
                    <GradientStop Color="#005ebe" Offset="0.567"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Button x:Name="btRankTitle" Content="Placements of the day" HorizontalAlignment="Left" Margin="6,-1,0,324" VerticalAlignment="Bottom" Width="284" Height="48" FontSize="22" FontFamily="Eras ITC" FontWeight="Bold" Foreground="DarkOrange" Background="Transparent" BorderBrush="Transparent" Click="btRankTitle_Click"/>

        <ProgressBar x:Name="pbRank1" HorizontalAlignment="Left" Height="26" Margin="64,72,0,0" VerticalAlignment="Top" Width="202" Minimum="0" Maximum="100" Foreground="Lime"/>
        <ProgressBar x:Name="pbRank2" HorizontalAlignment="Left" Height="27" Margin="64,103,0,0" VerticalAlignment="Top" Width="202" Minimum="0" Maximum="100" Foreground="LawnGreen"/>
        <ProgressBar x:Name="pbRank3" HorizontalAlignment="Left" Height="25" Margin="64,135,0,0" VerticalAlignment="Top" Width="202" Minimum="0" Maximum="100" Foreground="GreenYellow"/>
        <ProgressBar x:Name="pbRank4" HorizontalAlignment="Left" Height="25" Margin="64,166,0,0" VerticalAlignment="Top" Width="202" Minimum="0" Maximum="100" Foreground="Yellow"/>
        <ProgressBar x:Name="pbRank5" HorizontalAlignment="Left" Height="25" Margin="64,197,0,0" VerticalAlignment="Top" Width="202" Minimum="0" Maximum="100" Foreground="Gold"/>
        <ProgressBar x:Name="pbRank6" HorizontalAlignment="Left" Height="26" Margin="64,228,0,0" VerticalAlignment="Top" Width="202" Minimum="0" Maximum="100" Foreground="Orange"/>
        <ProgressBar x:Name="pbRank7" HorizontalAlignment="Left" Height="26" Margin="64,259,0,0" VerticalAlignment="Top" Width="202" Minimum="0" Maximum="100" Foreground="OrangeRed"/>
        <ProgressBar x:Name="pbRank8" HorizontalAlignment="Left" Height="26" Margin="64,290,0,0" VerticalAlignment="Top" Width="202" Minimum="0" Maximum="100" Foreground="DarkRed"/>
        <Label x:Name="lbRank1" Content="0" HorizontalAlignment="Left" Margin="136,74,0,0" VerticalAlignment="Top" Height="25" Width="59" HorizontalContentAlignment="Center" FontSize="10"/>
        <Label x:Name="lbRank2" Content="0" HorizontalAlignment="Left" Margin="136,104,0,0" VerticalAlignment="Top" Height="26" Width="59" HorizontalContentAlignment="Center" FontSize="10"/>
        <Label x:Name="lbRank3" Content="0" HorizontalAlignment="Left" Margin="136,135,0,0" VerticalAlignment="Top" Height="24" Width="59" HorizontalContentAlignment="Center" FontSize="10"/>
        <Label x:Name="lbRank4" Content="0" HorizontalAlignment="Left" Margin="136,166,0,0" VerticalAlignment="Top" Height="24" Width="59" HorizontalContentAlignment="Center" FontSize="10"/>
        <Label x:Name="lbRank5" Content="0" HorizontalAlignment="Left" Margin="136,198,0,0" VerticalAlignment="Top" Height="24" Width="59" HorizontalContentAlignment="Center" FontSize="10"/>
        <Label x:Name="lbRank6" Content="0" HorizontalAlignment="Left" Margin="136,229,0,0" VerticalAlignment="Top" Height="25" Width="59" HorizontalContentAlignment="Center" FontSize="10"/>
        <Label x:Name="lbRank7" Content="0" HorizontalAlignment="Left" Margin="136,259,0,0" VerticalAlignment="Top" Height="25" Width="59" HorizontalContentAlignment="Center" FontSize="10"/>
        <Label x:Name="lbRank8" Content="0" HorizontalAlignment="Left" Margin="136,291,0,0" VerticalAlignment="Top" Height="25" Width="59" HorizontalContentAlignment="Center" FontSize="10"/>
        <Image HorizontalAlignment="Left" Height="25" Margin="35,72,0,0" VerticalAlignment="Top" Width="35" Source="Icon/ranks.png"/>
        <Image HorizontalAlignment="Left" Height="25" Margin="35,109,0,0" VerticalAlignment="Top" Width="35" Source="Icon/2nd.png"/>




    </Grid>
</Window>
