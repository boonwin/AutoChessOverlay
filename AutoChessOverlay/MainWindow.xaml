        <Label x:Name="lbRank1" Content="0x" HorizontalAlignment="Left" Margin="136,64,0,0" VerticalAlignment="Top" Height="25" Width="59" HorizontalContentAlignment="Center" FontSize="14" FontFamily="Arial" FontStyle="Italic" FontWeight="Bold" BorderThickness="0"/>
        <Label x:Name="lbRank2" Content="0x" HorizontalAlignment="Left" Margin="136,94,0,0" VerticalAlignment="Top" Height="26" Width="59" HorizontalContentAlignment="Center" FontSize="14" FontFamily="Arial" FontStyle="Italic" FontWeight="Bold" BorderThickness="0"/>
